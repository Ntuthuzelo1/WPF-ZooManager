<Window x:Class="WPF_ZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_ZooManager"
        mc:Ignorable="d"
        Title="Zoo Manager" Height="450" Width="600">
    <Grid>
        <Label Content="Zoo List" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ListBox Name="listZoos" HorizontalAlignment="Left" Height="175" Margin="10,41,0,0" VerticalAlignment="Top" Width="158" SelectionChanged="listZoos_SelectionChanged"/>
        <Label Content="Associated Animals List" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="listAssociatedAnimals" HorizontalAlignment="Left" Height="175" Margin="220,41,0,0" VerticalAlignment="Top" Width="158"/>
        <ListBox x:Name="listAllAnimals" HorizontalAlignment="Left" Height="299" Margin="396,41,0,0" VerticalAlignment="Top" Width="158"/>
        <Button Content="Delete Zoo" HorizontalAlignment="Left" Margin="10,233,0,0" VerticalAlignment="Top" Width="158" Click="DeleteZoo_Click"/>
        <Button Content="Remove Animal" HorizontalAlignment="Center" Margin="0,233,0,0" VerticalAlignment="Top" Width="158"/>
        <Button Content="Add Zoo" HorizontalAlignment="Left" Margin="10,320,0,0" VerticalAlignment="Top" Width="158"/>
        <Button Content="Update Zoo" HorizontalAlignment="Left" Margin="10,345,0,0" VerticalAlignment="Top" Width="158"/>
        <Button Content="Add Animal Zoo" HorizontalAlignment="Left" Margin="220,320,0,0" VerticalAlignment="Top" Width="158"/>
        <Button Content="Update Animal" HorizontalAlignment="Left" Margin="220,345,0,0" VerticalAlignment="Top" Width="158"/>
        <Button Content="Delete Animal" HorizontalAlignment="Left" Margin="396,345,0,0" VerticalAlignment="Top" Width="158"/>
        <Button Content="Add Animal to Zoo" HorizontalAlignment="Left" Margin="396,16,0,0" VerticalAlignment="Top" Width="158"/>
        <TextBox HorizontalAlignment="Left" Margin="10,268,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="368" Height="37"/>

    </Grid>
</Window>
